@{
    ViewData["Title"] = "Cameras | Admin";
}
@model List<ChannelInfo.ChannelInfoList>

<head>
    <script src="https://unpkg.com/amazon-kinesis-video-streams-webrtc/dist/kvs-webrtc.min.js"></script>
    <title>Access Camera Clusters</title>
    <style>
        .hover tr:hover {
            background-color: darkseagreen;
        }
    </style>
</head>
<main>
    <div class="container">
        <div class="col-sm-8">
            <h1>Camera Clusters</h1>
            <label><a href="https://awslabs.github.io/amazon-kinesis-video-streams-webrtc-sdk-js/examples/index.html">Click here for test setup</a></label>
            <table class="table table-condensed hover">
                <tr style="background-color:transparent">
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Level</th>
                    <th scope="col">Location</th>
                    <th scope="col">Status</th>
                </tr>
                
                @foreach (ChannelInfo.ChannelInfoList channel in Model)
                {
                    <tr class="clickable" onclick="window.location='https://console.aws.amazon.com/kinesisvideo/home?region=us-east-1#/signalingChannels/signalingChannelName/camera1'" style="cursor:pointer;">

                        <td></td>
                        <td>channel.ChannelName</td>
                        <td></td>
                        <td></td>
                        <td>channel.ChannelStatus</td>
                        
                    </tr>
                }
            </table>
        </div>
    </div>
</main>