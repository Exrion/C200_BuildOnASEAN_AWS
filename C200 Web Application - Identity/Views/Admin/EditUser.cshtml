@model Users

@{
    ViewData["Title"] = "Edit User | Admin";
}

<h1>Edit User</h1>
<form method="post">
    <div class="form-group row">
        <!--ID Input - Disabled-->
        <label asp-for="Id" name="Id" class="col-md-2 col-form-label">User ID :</label>
        <div class="col-md-8">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <!--Email Input-->
        <label asp-for="Email" name="Email" class="col-md-2 col-form-label">Email :</label>
        <div class="col-md-8">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <!--UserName Input-->
        <label asp-for="UserName" name="UserName" class="col-md-2 col-form-label">UserName :</label>
        <div class="col-md-8">
            <input asp-for="UserName" class="form-control" />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row btn-toolbar">
        <div class="col-md-1 btn-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="col-md-1 btn-group">
            <a href="/Admin/Users" class="btn-primary btn">Cancel</a>
        </div>
    </div>

