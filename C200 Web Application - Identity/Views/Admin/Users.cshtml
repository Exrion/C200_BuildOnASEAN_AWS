@model List<Users>

@{
    ViewData["Title"] = "Users List | Admin";
}

<div class="row">
    <div class="col-md-12">
        <section>
            @{ 
                if (TempData["Error_msg"] != null)
                {
                    <p class="alert @TempData["Error_type"]">@TempData["Error_msg"]</p>
                }
            }
            @{
                if (@Model == null)
                {
                    <div class="col-md-6">
                        <p class="alert alert-danger">Database is either empty or cannot be reached!</p>
                    </div>
                }
                else
                {
                    <h1>Users List</h1>
                    <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Add new user</a>
                    <hr />

                    foreach (var user in Model)
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                User Id : @user.id
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@user.email</h5>
                            </div>
                            <div class="card-footer">
                                <form asp-action="DeleteUser" asp-route-id="@user.id" method="post">
                                    <a href="/Admin/EditUser/@user.id" class="btn btn-primary">Edit</a>
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user : @user.username')">Delete</button>
                                </form>
                            </div>
                        </div>
                    }
                }
            }
        </section>
    </div>
</div>