@{
    ViewData["Title"] = "Contacts | Admin";
}
@model List<SDAMAIN>

<main>
    @{
        if (TempData["Error_msg"] != null)
        {
            <p class="alert @TempData["Error_type"]">@TempData["Error_msg"]</p>
        }
    }
    <h1>Contacts</h1>
    <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateContact">Create New Contact</a>
    <hr />
    <table class="table table-responsive">
        @{
            <tr>
                <!--Table Head-->
                <th>Location ID</th>
                <th>Location</th>
                <th>Contact Count</th>
            </tr>
            foreach (SDAMAIN location in Model)
            {
                <tr class="tab-content">
                    <!--Table Content-->
                    <td>@location.Location_Location_id</td>
                    <td><a asp-controller="Admin" asp-action="Contacts_Location" asp-route-id="@location.Location">@location.Location</a></td>
                    <td>@location.Officer_count</td>
                </tr>
            }
        }
    </table>
</main>